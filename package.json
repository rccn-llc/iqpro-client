{
  "name": "@dojo-planner/iqpro-client",
  "version": "1.0.0",
  "description": "Standalone iQ Pro+ payment API client library for Dojo Planner",
  "author": "RCCN LLC",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "example:basic": "tsx examples/basic-usage.ts",
    "example:customer": "tsx examples/customer-management.ts", 
    "example:subscription": "tsx examples/subscription-management.ts",
    "example:transaction": "tsx examples/transaction-management.ts",
    "example:ecommerce": "tsx examples/ecommerce-integration.ts"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "iqpro",
    "payment",
    "api",
    "client",
    "typescript"
  ],
  "engines": {
    "node": ">=18"
  }
}
